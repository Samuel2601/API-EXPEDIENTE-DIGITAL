# Configuración del servidor
NODE_ENV=production
PORT=3000

# Base de datos
MONGODB_URI=mongodb://127.0.0.1:27017/labella
DB_NAME=labella

# Seguridad
JWT_SECRET=labella
JWT_EXPIRES_IN=3h

# CORS
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

# Archivos y uploads
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de producción
REDIS_URL=redis://localhost:6379
SESSION_SECRET=tu_session_secret_aqui

# Configuración de monitoreo
ENABLE_MONITORING=false
MONITORING_API_KEY=tu_api_key_de_monitoreo

# Configuración de notificaciones
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# URLs externas
EXTERNAL_API_URL=https://api.externa.com
EXTERNAL_API_KEY=tu_api_key_externa

# Configuración de certificados SSL (para producción)
SSL_CERT_PATH=
SSL_KEY_PATH=

# Configuración de backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups


# Oracle Database
DRIVEORACLE=C:\\oracle\\instantclient_21_18
ORACLE_DEFAULT_CONNECT_STRING=192.168.120.13:1521/bdesme
ORACLE_DEFAULT_USER=CAMALGAD
ORACLE_DEFAULT_PASSWORD=CAM/2025*Gadmces

# Configuración SMTP para Gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# IMPORTANTE: Cambiar estos valores por los reales
SMTP_USER=tu-email-real@gmail.com
SMTP_PASSWORD=tu-contraseña-de-aplicacion-real

# Información del remitente
EMAIL_FROM_NAME=Sistema de Faenamiento Municipal
EMAIL_FROM_ADDRESS=noreply@faenamiento.gov.ec

# Configuración de WhatsApp
WHATSAPP_ENABLED=false
WHATSAPP_API_URL=https://api.whatsapp.example.com
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PROVIDER=custom
WHATSAPP_TIMEOUT=30000

# Configuración de SMS (opcional)
SMS_ENABLED=false
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret

# Información de la empresa
COMPANY_NAME=Centro de Faenamiento Municipal
COMPANY_ADDRESS=Esmeraldas, Ecuador
COMPANY_PHONE=+593-6-2726000
COMPANY_EMAIL=contacto@faenamiento.gov.ec
SUPPORT_EMAIL=soporte@faenamiento.gov.ec
SUPPORT_PHONE=+593-6-2726000
COMPANY_WEBSITE=https://faenamiento.gov.ec
PORTAL_URL=https://portal.faenamiento.gov.ec
COMPANY_LOGO=/assets/logo.png

# Habilitar/deshabilitar notificaciones
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# Configuración de reintentos
NOTIFICATION_MAX_RETRIES=3
NOTIFICATION_BACKOFF_MULTIPLIER=2
NOTIFICATION_INITIAL_DELAY=30
NOTIFICATION_MAX_DELAY=1440

# Configuración de límites
MAX_BULK_RECIPIENTS=100
MAX_DAILY_NOTIFICATIONS=1000
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX=100

# Configuración de logging
NOTIFICATION_LOG_LEVEL=info
NOTIFICATION_LOG_RETENTION=90

# RSync Configuration
RSYNC_REMOTE_HOST=tu.servidor.com
RSYNC_REMOTE_USER=tu_usuario
RSYNC_REMOTE_PASSWORD=tu_contraseña
RSYNC_REMOTE_PORT=22
RSYNC_REMOTE_PATH=/ruta/remota/destino/
RSYNC_LOCAL_PATH=./archivos_subidos/
RSYNC_SSH_KEY_PATH=~/.ssh/id_rsa
RSYNC_OPTIONS=-avz --progress